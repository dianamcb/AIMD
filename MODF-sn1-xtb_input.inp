&GLOBAL
	RUN_TYPE MD
	PRINT_LEVEL LOW
	PROJECT_NAME xtb-meta-V2
&END GLOBAL

&FORCE_EVAL
   METHOD QS
   STRESS_TENSOR ANALYTICAL

   &DFT
		BASIS_SET_FILE_NAME DZVP
		POTENTIAL_FILE_NAME GTH
		CHARGE 0
		LSD
		MULTIPLICITY 1
		WFN_RESTART_FILE_NAME xtb-meta-V2.wfn
		!&MGRID
		!	CUTOFF 280
		!	NGRIDS 5
		!END MGRID
		&QS
			METHOD XTB
			&XTB
				CHECK_ATOMIC_CHARGES .FALSE.
				DO_EWALD .TRUE.
				&PARAMETER
				&END PARAMETER
			&END XTB
            !METHOD GPW
            !EPS_DEFAULT 1.0E-10
            !EXTRAPOLATION ASPC
		&END QS
		&SCF
			MAX_SCF 200
			EPS_SCF 1.0E-5
			SCF_GUESS RESTART
			&OT
				MINIMIZER DIIS
				PRECONDITIONER FULL_ALL
				Energy_GAP 0.001
			&END OT
			&OUTER_SCF
				EPS_SCF 1.0E-5
				MAX_SCF 20
			&END OUTER_SCF
		&END SCF
		&POISSON
			POISSON_SOLVER PERIODIC
			PERIODIC XYZ
		&END POISSON
	    &XC
	    &XC_FUNCTIONAL
		    &PBE
			    PARAMETRIZATION ORIG
		    &END PBE
	    &END XC_FUNCTIONAL
	    &VDW_POTENTIAL
    		POTENTIAL_TYPE PAIR_POTENTIAL
	    	&PAIR_POTENTIAL
		    	PARAMETER_FILE_NAME DFTD3
			    TYPE DFTD3
    			REFERENCE_FUNCTIONAL PBE
	    		R_CUTOFF 16
		    &END PAIR_POTENTIAL
    	&END VDW_POTENTIAL
        &END XC
    &END DFT

	&SUBSYS
		!&CELL
		!	ABC 16 16 16
		!	PERIODIC XYZ
		!&END CELL
		&CELL
      		 ! cubic unit cell
			A [angstrom]               34.34400000    0.00000000    0.00000000
			B [angstrom]                0.00000000   34.69100000    0.00000000
			C [angstrom]                0.00000000    0.00000000   35.26200000
            		PERIODIC XYZ
    		&END CELL
		&TOPOLOGY
			COORD_FILE_FORMAT XYZ
			COORD_FILE_NAME solvated-me3cl.xyz
			&CENTER_COORDINATES
			&END CENTER_COORDINATES
		&END TOPOLOGY

        &KIND C
            ELEMENT C
            BASIS_SET DZVP-MOLOPT-SR-GTH
            POTENTIAL GTH-PBE-q4
        &END KIND C
        &KIND Cl
            ELEMENT Cl
            BASIS_SET DZVP-MOLOPT-SR-GTH
            POTENTIAL GTH-PBE-q7
        &END KIND Cl

		#C-Cl
		&COLVAR
			!&DISTANCE
			!	ATOMS 1 2
			!&END
			&COORDINATION
				ATOMS_FROM 1
				ATOMS_TO 2
				R0 [angstrom] 4.72
			&END COORDINATION
		&END COLVAR
	&END SUBSYS
&END FORCE_EVAL

&MOTION
	&PRINT
		&RESTART_HISTORY
			&EACH
				MD 2000
			&END EACH
		&END RESTART_HISTORY
		&TRAJECTORY
			&EACH
				MD 10
			&END EACH
		&END TRAJECTORY
	&END PRINT
	&CELL_OPT
		TYPE DIRECT_CELL_OPT
		MAX_ITER 1000
	&END CELL_OPT
	&GEO_OPT
		OPTIMIZER BFGS
		&BFGS
		&END BFGS
		MAX_ITER 2000
		MAX_DR 0.003
	&END GEO_OPT
  
	&MD
		ENSEMBLE NVT
		STEPS 100
		TIMESTEP [fs] 1.0 
		TEMPERATURE [K] 298.15
		&THERMOSTAT
			TYPE NOSE      
			&NOSE
	         	LENGTH 3
	         	YOSHIDA 3
			TIMECON 1000.0
	         	MTS 2
			&END NOSE
		&END THERMOSTAT
	&END MD

	&FREE_ENERGY
		&METADYN
			DO_HILLS T
			NT_HILLS 50
			WW [kjmol] 1.0   #
	!       #THE ABOVE MENTIONED VALUE IS CHANGED TO 1.0 AFTER THE FIRST 20000 STEPS
			&METAVAR
				COLVAR 1
				SCALE 0.1
		!     &WALL
		!       TYPE QUADRATIC
		!       POSITION 0.015
	!          &QUADRATIC
	!              DIRECTION WALL_MINUS
	!              K 300.0
	!          &END QUADRATIC
		!     &END WALL
			&END METAVAR
   
			&PRINT
				&COLVAR
					COMMON_ITERATION_LEVELS 2
					&EACH
						MD 1
					&END
					FILENAME=colvar
				&END COLVAR
				&HILLS
					COMMON_ITERATION_LEVELS 2
					&EACH
						METADYNAMICS 1
					&END
					FILENAME=hills
				&END HILLS
			&END PRINT
		&END METADYN
	&END FREE_ENERGY
&END MOTION

! &EXT_RESTART
!	RESTART_FILE_NAME xtb-meta-1.restart
!  	RESTART_COUNTERS T
!  	RESTART_POS T
!  	RESTART_VEL  T
!  	RESTART_THERMOSTAT T
! &END EXT_RESTART

